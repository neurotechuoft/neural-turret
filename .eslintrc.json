{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "plugins": [
        "react"
    ],

    "parserOptions": {
        "sourceType": "module",
        
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "ecmaVersion": 2017
        }
    },

    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },

    "rules": {
        "max-len": ["error", 120],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    }
}